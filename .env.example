# ============================================================================
# Django Settings
# ============================================================================
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production-12345678901234567890
ALLOWED_HOSTS=localhost,127.0.0.1,smartcart.example.com

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=smartcart_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres-password-123
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CACHE_URL=redis://localhost:6379/1

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_TIMEZONE=UTC

# ============================================================================
# Email Configuration (for Celery tasks)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smartcart.com

# ============================================================================
# Payment Gateway (Paystack)
# ============================================================================
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# ============================================================================
# AWS Configuration (if using S3 for media/static)
# ============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Settings
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://example.com
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=SmartCart
APP_ENV=development
TIMEZONE=UTC

# ============================================================================
# Stripe (if using instead of Paystack)
# ============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# ============================================================================
# SMS Configuration (if needed)
# ============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# API Rate Limiting
# ============================================================================
RATELIMIT_ENABLED=True
RATELIMIT_USE_CACHE=default
RATELIMIT_VIEW=100/h

# ============================================================================
# Session & Cookie Settings
# ============================================================================
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
